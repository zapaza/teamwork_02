.header {
    display: flex;
    justify-content: space-between;
    position: fixed;
    top: 0;
    width: 100%;
    padding: 20px;
    background-color: #f8f9fa;
    box-shadow: 0 2px 15px rgb(0 0 0 / 10%);
    z-index: 100;
  
    &__nav {
      display: flex;
      gap: 20px;
      margin: 0 auto;
    }
  
    &__nav-button {
      margin: auto;
      text-decoration: none;
      color: inherit;
    }
  }
  